<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/loginImg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/img_login"
        tools:srcCompat="@drawable/img_login" />

    <EditText
        android:id="@+id/textEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:drawableRight="@drawable/baseline_email"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:maxLength="50"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/textSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableRight="@drawable/baseline_lock"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:maxLength="30"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rosakirby"
            android:text="ENTRAR"
            android:textAlignment="center"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/linkCriarConta"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="Criar Conta"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textRecuperarSenha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:text="Esqueceu sua senha?"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            android:text="Copyright Â© 2023 - NoobSystems"
            android:textSize="10sp" />

    </LinearLayout>


</LinearLayout>